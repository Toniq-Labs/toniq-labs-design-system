    "scripts": {
        "build": "virmator frontend build",
        "compile": "rm -rf dist && tsc --project tsconfig.json && tsc --project tsconfig.cjs.json",
        "format": "virmator format",
        "publish": "virmator publish \"npm run test:all\"",
        "start": "virmator frontend",
        "test": "virmator test-web",
        "test:all": "npm run test:types && npm test && npm run test:scripts && npm run test:spelling && npm run test:format && npm run build",
        "test:debug": "wtr --watch --only-one-browser",
        "test:exports": "cd scripts && npm run test:exports",
        "test:format": "virmator format check",
        "test:node-versions": "cd scripts && npm run test:node-versions",
        "test:scripts": "cd scripts && npm run test",
        "test:spelling": "virmator spellcheck",
        "test:types": "tsc --noEmit",
        "test:watch": "wtr --watch --only-one-browser",
        "update:exports": "cd scripts && npm run update:exports"
    },
    "dependencies": {
        "@augment-vir/common": "^12.2.1",
