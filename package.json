{
    "name": "@toniq-labs/design-system-root",
    "version": "7.0.1",
    "private": true,
    "description": "Root design system mono-repo package.",
    "homepage": "https://github.com/Toniq-Labs/bioniq",
    "bugs": {
        "url": "https://github.com/Toniq-Labs/bioniq/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Toniq-Labs/bioniq"
    },
    "license": "MIT",
    "author": {
        "name": "Toniq-Labs",
        "url": "https://github.com/Toniq-Labs"
    },
    "workspaces": [
        "./packages/*"
    ],
    "scripts": {
        "build": "npm run compile && cd packages/design-system && npm run build",
        "compile": "mono-vir for-each npm run compile",
        "format": "virmator format",
        "postinstall": "node -e \"__dirname.includes('node_modules') && process.exit(0)\" && npm run compile",
        "publish": "virmator publish \"npm run test:all\"",
        "regenerate-deps": "rm -rf node_modules && rm -rf packages/*/node_modules && rm -f package-lock.json && npm i",
        "start": "cd packages/design-system && npm start",
        "test": "npm run test --workspaces --if-present",
        "test:all": "npm run compile && concurrently --kill-others-on-fail -c auto --names types,tests,spelling,format,docs \"npm run test:types\" \"npm run test:all --workspaces\" \"npm run test:spelling\" \"npm run test:format\" \"npm run test:docs\"",
        "test:docs": "virmator code-in-markdown check README.md",
        "test:format": "virmator format check",
        "test:spelling": "virmator spellcheck",
        "test:types": "mono-vir for-each-async tsc --noEmit",
        "update:exports": "cd packages/scripts && npm run update:exports"
    },
    "dependencies": {
        "spa-router-vir": "^3.0.2",
        "vira": "^2.3.0"
    },
    "devDependencies": {
        "concurrently": "^8.2.1",
        "cspell": "^7.3.6",
        "esbuild": "^0.19.3",
        "markdown-code-example-inserter": "^0.3.1",
        "mono-vir": "^0.1.4",
        "npm-check-updates": "~16.12.3",
        "prettier": "^2.8.8",
        "prettier-plugin-interpolated-html-tags": "^0.0.4",
        "prettier-plugin-jsdoc": "^0.4.2",
        "prettier-plugin-multiline-arrays": "^2.0.0",
        "prettier-plugin-organize-imports": "^3.2.3",
        "prettier-plugin-packagejson": "^2.4.5",
        "prettier-plugin-sort-json": "^2.0.0",
        "prettier-plugin-toml": "^0.3.1",
        "typescript": "5.2.2",
        "virmator": "^7.4.1"
    },
    "overrides": {
        "semver": "^7.5.2"
    }
}
