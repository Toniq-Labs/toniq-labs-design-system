{
    "name": "@toniq-labs/design-system-root",
    "private": true,
    "description": "Root design system mono-repo package.",
    "homepage": "https://github.com/Toniq-Labs/bioniq",
    "bugs": {
        "url": "https://github.com/Toniq-Labs/bioniq/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Toniq-Labs/bioniq"
    },
    "license": "MIT",
    "author": {
        "name": "Toniq-Labs",
        "url": "https://github.com/Toniq-Labs"
    },
    "workspaces": [
        "./packages/*"
    ],
    "scripts": {
        "compile": "tsc-mono for-each npm run compile",
        "format": "virmator format",
        "postinstall": "node -e \"__dirname.includes('node_modules') && process.exit(0)\" && npm run compile",
        "publish": "npm run test:all && npm run publish --workspaces --if-present",
        "start": "concurrently \"cd packages/demo && npm run start\" \"nodemon --config configs/nodemon.json\" ",
        "test": "npm run test --workspaces --if-present",
        "test:all": "concurrently --kill-others-on-fail \"npm run test:types\" \"npm run test:all --workspaces\" \"npm run test:spelling\" \"npm run test:format\" \"npm run test:docs\"",
        "test:docs": "virmator code-in-markdown check README.md",
        "test:format": "virmator format check",
        "test:spelling": "virmator spellcheck",
        "test:types": "tsc-mono for-each tsc --noEmit"
    },
    "devDependencies": {
        "concurrently": "^8.0.1",
        "cspell": "^6.31.1",
        "esbuild": "^0.17.18",
        "markdown-code-example-inserter": "^0.3.0",
        "nodemon": "^2.0.22",
        "npm-check-updates": "^16.10.9",
        "prettier": "^2.8.8",
        "prettier-plugin-interpolated-html-tags": "^0.0.3",
        "prettier-plugin-jsdoc": "^0.4.2",
        "prettier-plugin-multiline-arrays": "^1.1.3",
        "prettier-plugin-organize-imports": "^3.2.2",
        "prettier-plugin-packagejson": "^2.4.3",
        "prettier-plugin-sort-json": "^1.0.0",
        "prettier-plugin-toml": "^0.3.1",
        "tsc-mono": "^2.1.2",
        "typescript": "^5.0.4",
        "virmator": "^6.4.3"
    }
}
